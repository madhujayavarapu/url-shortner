{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext", 
    "outDir": "build",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}